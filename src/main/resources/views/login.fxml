            text="重置">
        <font>
            <Font name="Segoe UI Light" size="24.0"/>
        </font>
    </Button>
    <Label fx:id="nameTip" layoutX="168.0" layoutY="90.0" prefHeight="22.0" prefWidth="241.0" textFill="RED"/>
    <Label fx:id="passwordTip" layoutX="168.0" layoutY="159.0" prefHeight="22.0" prefWidth="241.0" textFill="RED"/>
    <Label fx:id="register" layoutX="420.0" layoutY="55.0" prefHeight="22.0" prefWidth="70.0" text="注册账号"
           onMouseClicked="#textRegisterFieldClickListener"/>
    <Label fx:id="forget" layoutX="420.0" layoutY="126.0" prefHeight="22.0" prefWidth="70.0" text="忘记密码"
           onMouseClicked="#textForgetFieldClickListener"/>
</Pane>
