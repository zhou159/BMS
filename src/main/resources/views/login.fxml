<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="354.0"
      prefWidth="541.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.zhou.bms2.controller.LoginController">
    <Label layoutX="91.0" layoutY="54.0" prefHeight="22.0" prefWidth="70.0" text="用户名：">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <Label layoutX="91.0" layoutY="126.0" prefHeight="22.0" prefWidth="70.0" text="密  码：">
        <font>
            <Font size="16.0"/>
        </font>
    </Label>
    <TextField fx:id="accountTextField" layoutX="168.0" layoutY="50.0" onMouseClicked="#textNameFieldClickListener"
               prefHeight="31.0" prefWidth="241.0"/>
    <PasswordField fx:id="passwordTextField" layoutX="168.0" layoutY="122.0"
                   onMouseClicked="#textPasswordFieldClickListener" prefHeight="31.0" prefWidth="241.0"/>
    <Button layoutX="81.0" layoutY="216.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="53.0"
            prefWidth="90.0"
